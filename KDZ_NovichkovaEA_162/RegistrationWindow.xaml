<Window x:Class="KDZ_NovichkovaEA_162.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDZ_NovichkovaEA_162"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="223.404" Width="380.851">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" FontFamily="Rupster Script Free" >Введите логин:</TextBlock>
        <TextBox Name="loginBox" Grid.Row="2" MinWidth="200"/>
        <TextBlock Grid.Row="3" FontFamily="Rupster Script Free">Введите пароль:</TextBlock>
        <PasswordBox Name="passwordBox" Grid.Row="4" MinWidth="200"/>

        <WrapPanel Grid.Row="6" HorizontalAlignment="Right" Width="140">
            <Button x:Name="BackButton" Width="70" Content="Назад" Click="BackButton_Click"/>
            <Button x:Name="OkButton" IsDefault="True" MinWidth="70" Click="Button_Click" Content="Готово"/>

        </WrapPanel>

    </Grid>
</Window>
