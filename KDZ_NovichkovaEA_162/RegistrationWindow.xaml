<Window x:Class="KDZ_NovichkovaEA_162.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDZ_NovichkovaEA_162"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1">Введите логин:</TextBlock>
        <TextBox Name="loginBox" Grid.Row="2" MinWidth="200"></TextBox>
        <TextBlock Grid.Row="3">Введите пароль:</TextBlock>
        <PasswordBox Name="passwordBox" Grid.Row="4" MinWidth="200"></PasswordBox>

        <WrapPanel Grid.Row="6" HorizontalAlignment="Right">
            <Button x:Name="btnOK" IsDefault="True" MinWidth="60" Click="Button_Click" >OK</Button>
            <Button x:Name="btnCancel" IsCancel="True" MinWidth="60">Отмена</Button>
        </WrapPanel>

    </Grid>
</Window>
