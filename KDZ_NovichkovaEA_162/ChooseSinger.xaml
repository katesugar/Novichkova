<Page x:Class="KDZ_NovichkovaEA_162.ChooseSinger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KDZ_NovichkovaEA_162"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ChooseSinger">

    <Grid Margin="10,0, 10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <Border Grid.Row="1" Height="35" Padding="5" Background="Bisque" Margin="0,0,0,90">
            <Label VerticalAlignment="Center" Foreground="Black" Margin="-5,5,5,-5">Исполнители</Label>
        </Border>
        <ListBox Name="ListOfAlbums" Grid.Row="1" Margin="0,35,0,-35">
            <ListBoxItem Content="Rihanna"/>
            <ListBoxItem Content="Ariana Grande"/>
            <ListBoxItem Content="Miley Cyrus"/>
            <ListBoxItem Content="John Legend"/>
            <ListBoxItem Content="Die Antwoord"/>
        </ListBox>
        <Button Grid.Row="1" Margin="0,184,0,-83" Width="125" Height="25" HorizontalAlignment="Right">Далее</Button>
    </Grid>
</Page>
